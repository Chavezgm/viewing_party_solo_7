<%= form_with(url: login_path, method: :post) do |form| %>
  <%= form.label :email %>
  <%= form.text_field :email %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.label :location %>
  <%= form.text_field :location, value: cookies[:user_location] %>

  <%= form.submit 'Log In' %>
<% end %>
